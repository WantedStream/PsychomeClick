<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StopperFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/stopperTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stopper"
            android:textSize="60dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/colorTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp"
            android:gravity="center_horizontal"
            android:layout_marginVertical="30dp"
           >

            <TextView
                android:id="@+id/infoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info"
                android:textSize="60dp"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                />

            <TextView
                android:id="@+id/timerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginVertical="30dp">
            <Button
                android:id="@+id/startBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="start"
                android:textSize="20dp"
                android:backgroundTint="#1F9F43"
                android:padding="0dp"
                />
            <Button
                android:id="@+id/finishTestBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:visibility="gone"
                android:backgroundTint="#1F9F43"
                android:textSize="20dp"
                android:padding="0dp"
                android:layout_marginHorizontal="5dp"
                />

            <Button
                android:id="@+id/pauseBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="pause"
                android:visibility="gone"
                android:backgroundTint="#1F9F43"
                android:textSize="20dp"
                android:layout_marginHorizontal="5dp"
                android:padding="0dp"
                />
            <Button
                android:id="@+id/nextPerekBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="next"
                android:visibility="gone"
                android:backgroundTint="#1F9F43"
                android:textSize="20dp"
                android:padding="0dp"
                android:layout_marginHorizontal="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="include essay"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>